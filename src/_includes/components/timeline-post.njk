<div class="flex mb-12 md:mb-12 timeline-item">
	<div class="flex flex-col items-center">
		<div class="flex justify-center items-center p-3 rounded-full align-center border-4 border-black bg-gray-800">
			<i class="icon text-white text-sm" data-icon="pencil"></i>
		</div>
		<div class="flex-1 w-px -mb-12  md:-mb-12 bg-gray-800 timeline-stroke"></div>
	</div>
	<div class="flex flex-col flex-1 ml-4 space-y-4">
		<div class="flex flex-col pt-1 contents-center">
			<span class="font-medium text-primary">Published new post</span>
			<span class="text-sm text-gray-300">
				<time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
			</span>
		</div>

		<div class="flex flex-col space-y-4 timeline-full-width">
			<a class="px-4 py-3 transition-all rounded-md shadow bg-gray-900 filter-hover" href="{{ item.url | url }}">
				<div class="flex flex-col space-y-4">
					<div class="flex flex-col space-y-1 text-sm">
						<p class="font-semibold">{{item.title}}</p>

						{% if item.excerpt %}
							<p class="font-normal text-tertiary">{{item.excerpt}}</p>
						{% endif %}
					</div>
				</div>
			</a>
		</div>
	</div>
</div>