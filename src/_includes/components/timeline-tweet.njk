<div class="flex mb-12 md:mb-12 timeline-item">
	
	<div class="flex flex-col items-center">
		<div class="flex justify-center items-center p-3 rounded-full align-center border-4 border-black  bg-gray-800">
			<i class="icon text-white text-sm" data-icon="twitter"></i>
		</div>

		<div class="flex-1 w-px -mb-12 md:-mb-12 bg-gray-800"></div>
	</div>

	<div class="flex flex-col flex-1 ml-4 space-y-4">

		<div class="flex flex-col pt-1 contents-center">
			<span class="font-medium text-primary">Tweet</span>
			<span class="text-sm text-gray-300">
				<time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
			</span>
		</div>

		<div class="flex flex-col space-y-4 timeline-full-width">

			<div class="-mt-2 prose-dark prose-sm timeline-inset">
				<blockquote>{{item.tweetText}}</blockquote>
				{% if item.tweetComment %}
					<p>{{item.tweetComment}}</p>
				{% endif %}
			</div>

			{% if item.tweetUrl %}
				<div class="flex flex-wrap space-y-3 md:space-y-0 md:space-x-3 timeline-inset">
					<a href="{{item.tweetUrl}}" target="_blank" rel="noopener noreferrer" class="w-full md:w-auto">
						<button class="w-full md:w-auto {{class.button}} {{class.buttonSmall}}"><span>View tweet</span></button>
					</a>
				</div>
			{% endif %}

		</div>
	</div>
</div>